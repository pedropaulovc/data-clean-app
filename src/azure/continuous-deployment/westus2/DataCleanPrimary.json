    // ACR
    {
      "type": "Microsoft.ContainerRegistry/registries",
      "apiVersion": "2019-05-01",
      "name": "[variables('acrName')]",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "Standard"
      },
      "properties": {
        "adminUserEnabled": false
      }
    },
    // VNet diagnostic settings; depends on VNet and Log Insights workspace
    {
      "type": "Microsoft.Network/virtualNetworks/providers/diagnosticSettings",
      "apiVersion": "2017-05-01-preview",
      "name": "[concat(variables('vNetName'),'/Microsoft.Insights/', variables('vNetDiagnosticsName'))]",
      "dependsOn": [
        "[variables('vNetName')]",
        "[variables('logInsightsWorkspaceName')]"
      ],
      "properties": {
        "workspaceId": "[variables('logInsightsWorkspaceId')]",
        "logs": [
          {
            "category": "VMProtectionAlerts",
            "enabled": true,
            "retentionPolicy": {
              "days": 0,
              "enabled": false
            }
          }
        ],
        "metrics": [
          {
            "enabled": true,
            "retentionPolicy": {
                "days": 0,
                "enabled": false
            },
            "category": "AllMetrics"
          }
        ]
      }
    },
    // VNet
    {
      "apiVersion": "2019-09-01",
      "name": "[variables('vNetName')]",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "properties": {
        "subnets": [
          {
            "name": "default",
            "properties": {
              "addressPrefix": "10.240.0.0/16"
            }
          }
        ],
        "addressSpace": {
          "addressPrefixes": [
            "10.0.0.0/8"
          ]
        }
      },
      "tags": {}
    },
    // Log Insights workspace
    {
      "apiVersion": "2015-11-01-preview",
      "type": "Microsoft.OperationalInsights/workspaces",
      "location": "[resourceGroup().location]",
      "name": "[variables('logInsightsWorkspaceName')]",
      "properties": {
        "sku": {
          "name": "standalone"
        }
      }
    }
